package com.tle.ps;
import java.util.*;
public class NonAdjSolution {
	public static void main(String[] args) {
		int[] arr = {0,4,1,-10,10,2};
		int n = arr.length;
		int[] dp = new int[n];
		int ans = findMaxSum(n-1, arr);
		System.out.println(ans);
	}
	public static int findMaxSum(int index, int arr[]) {
		if(index == 0)return arr[0];
		int pick = arr[index];
		if(index>=2)
			pick+= findMaxSum(index-2,arr);
		int nonPick = findMaxSum(index-1,arr);
		return Math.max(pick, nonPick);
	}

}
