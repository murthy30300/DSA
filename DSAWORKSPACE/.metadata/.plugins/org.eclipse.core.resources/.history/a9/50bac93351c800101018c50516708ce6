package com.tle.ps;
import java.util.*;
	public class MikeGcd{
		public static int g
	    public static void main(String[] args){
	        Scanner sc = new Scanner(System.in);
	        int n = sc.nextInt();
	        ArrayList<Integer> al = new ArrayList<>();
	        for(int i=0;i<n;i++){
	            al.add(sc.nextInt());
	        }
	        int ans = al.get(0);
	        for(int i=1;i<n;i++){
	            ans = gcd(ans, al.get(i));
	        }
	        if(ans>1){
	            System.out.print("YES\n0");
	        }
	        else{
	            ArrayList<Boolean> bl = new ArrayList<>();
	            for(int i=0;i<n;i++){
	                if((al.get(i)&1) == 0) bl.add(true);
	                bl.add(false);
	            }
	            int sum=0;
	            for(int i=0;i<n;i++){
	                if(!bl.get(i)){
	                    if(bl.get(i+1)){
	                        sum++;
	                    }
	                    else{
	                        sum+=2;
	                    }
	                    bl.add(i,true);
	                    bl.add(i+1,true);
	                }
	            }
	            if(!bl.get(n-1)){
	                sum+=2;
	            }
	            System.out.print("YES\n"+sum);
	        }
	    }
	}